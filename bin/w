#!/bin/bash
query=""
if [ -z $1 ]; then
  read -p "USAGE: w SEARCH_TERM  " query
  echo ""
fi
for a in $@
do
  if [ $a != $1 ]; then
    query+=" "
  fi 
  query+=$a
done
result=`dig +short txt "$query".wp.dg.cx`
if [ ${#result} -ne 0 ]; then
  echo $result
else
  echo -e "Sorry, no results found."
fi
exit
